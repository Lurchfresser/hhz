{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo test",
            "cargo": {
                "args": [
                    "test",
                    "--all-features",
                    "--lib"
                ]
            },
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Perf",
            "cargo": {
                "args": [
                    "build",
                    "-F chessie",
                    "--bin=perf"
                ]
            },
            "args": [],
            "program": "${workspaceFolder}/target/debug/perf",
            "initCommands": [
                "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Make Api",
            "cargo": {
                "args": [
                    "build",
                    "-F server",
                    "--bin=make_api"
                ]
            },
            "args": [],
            "program": "${workspaceFolder}/target/debug/make_api",
            "initCommands": [
                "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Lichess",
            "cargo": {
                "args": [
                    "build",
                    "-F lichess",
                    "--bin=lichess"
                ]
            },
            "args": [],
            "program": "${workspaceFolder}/target/debug/lichess",
            "initCommands": [
                "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'"
            ]
        },
        {
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickProcess}",
            "name": "Attach debugger",
            // "initCommands": [
            //     "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'",
            //     // Add this line to handle the SIGWINCH signal gracefully
            //     "process handle SIGWINCH --notify false --pass true --stop false"
            // ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Benchmark",
            "cargo": {
                "args": [
                    "build",
                    "-F metrics",
                    "--bin=benchmark"
                ]
            },
            "args": [],
            "program": "${workspaceFolder}/target/debug/benchmark",
            "initCommands": [
                "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Gen attacks",
            "cargo": {
                "args": [
                    "build",
                    "--bin=generate_attack_lookup",
                    "-F gen_look_up"
                ]
            },
            "args": [],
            "program": "${workspaceFolder}/target/debug/generate_attack_lookup",
            "initCommands": [
                "command source '${workspaceFolder}/.vscode/rust_formatters.lldb'"
            ]
        }
    ]
}